IF player_dont_have_base AND not_a_mountain 0 0 THEN build_base 0 0;
IF player_dont_have_base AND a_mountain 0 0 THEN build_base 0 1;

#base_defenders
IF is_base_position 0 0 AND is_empty_position 1 0 AND money > 11 THEN build_knight 1 0;
IF is_base_position 0 0 AND is_empty_position 1 -1 AND money > 11 THEN build_knight 1 -1;
IF is_base_position 0 0 AND is_empty_position 0 -1 AND money > 47 THEN build_knight 0 -1;
IF is_base_position 0 0 AND is_empty_position -1 -1 AND money > 35 THEN build_knight -1 -1;
IF is_base_position 0 0 AND is_empty_position -1 0 AND money > 23 THEN build_knight -1 0;
IF is_base_position 0 0 AND is_empty_position 0 1 AND money > 11 THEN build_knight 0 1;

IF is_base_position 0 1 AND is_empty_position 0 0 AND money > 11 THEN build_knight 0 0;
IF is_base_position 0 1 AND is_empty_position -1 1 AND money > 11 THEN build_knight -1 1;
IF is_base_position 0 1 AND is_empty_position 0 2 AND money > 11 THEN build_knight 0 2;
IF is_base_position 0 1 AND is_empty_position 1 1 AND money > 11 THEN build_knight 1 1;
IF is_base_position 0 1 AND is_empty_position 1 0 AND money > 11 THEN build_knight 1 0;
IF is_base_position 0 1 AND is_empty_position -1 0 AND money > 11 THEN build_knight -1 0;

#jednoduche pravidla
#IF visible_free_tile* river AND riverside_tile AND money > 11 THEN build_knight_pos riverside_tile;
IF visible_free_tile* mountain AND money > 9 THEN build_archer visible_free_tile WITH 0.3;
IF visible_free_tile* hill AND money > 24 THEN build_druid visible_free_tile WITH 0.4;
IF daemon_from_top [0.30] THEN build_ent WITH 0.20;
